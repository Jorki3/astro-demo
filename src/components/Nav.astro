---
import { Image } from "astro:assets";
import AstroLogo from "../images/astro-logo.png";
---

<nav class="bg-gray-800 p-4">
    <div class="container mx-auto flex md:justify-between md:items-center flex-col md:flex-row">
        <div class="flex items-center justify-between w-full md:w-auto">
            <a href="/" class="text-white font-bold text-xl">
                <Image src={AstroLogo} alt="Astro Logo" height="80" loading="eager" />
            </a>

            <button
                id="menu-toggle"
                class="md:hidden text-white focus:outline-none"
            >
                <svg
                    class="h-6 w-6"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
        
        <ul class="md:flex md:items-center md:space-x-6 hidden mt-4 md:mt-0" id="menu">
            <li>
                <a href="/" class="text-gray-300 hover:text-white text-lg font-semibold">Inicio</a>
            </li>
            <li>
                <a href="/about" class="text-gray-300 hover:text-white text-lg font-semibold"
                    >Acerca de</a >
            </li>
            <li>
                <a href="/contact" class="text-gray-300 hover:text-white text-lg font-semibold"
                    >Contacto</a >
            </li>
        </ul>
    </div>
</nav>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("menu");

    menuToggle.addEventListener("click", () => {
        menu.classList.toggle("hidden");
    });
</script>
