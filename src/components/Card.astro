---
interface Props {
	icon: string;
	title: string;
	description
}

const { icon,title,description, } = Astro.props;
---

<div class="bg-zinc-700 text-zinc-100 p-6 rounded shadow hover:shadow-lg transition">
	<div class="text-4xl text-center mb-4">
		{icon}
	</div>
	<h3 class="text-xl font-semibold text-center mb-2">
		{title}
	</h3>
	<p class="text-zinc-50 text-center">
		{description}
	</p>
</div>
